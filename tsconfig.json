{
    "compilerOptions": {
        "target": "es6",        //<--- especificação dos EcmasScript
        "outDir": "app/js",     //<--- Aonde ira jogar os códigos convertido para Js
        "noEmitOnError": true, //<--- Não compila se tiver erro 
        "noImplicitAny": true,  //<--- Desativa o tipo Any explicitamente
        "removeComments": true,   //<--- Desativa os comentarios    
        "module": "system"
    },
    "include": [
        "app/ts/**/*"  //<--- Raiz aonde irá encontrar os ts 
    ]
}